
<h1>Task Manager</h1>
<h2>Tasks Index</h2>

<ul>
  <% @tasks.each do |t| %>
    <li>
      <h2><%= t.completed ? "[X]" : "[ ]"%> <%= link_to t.title, task_path(t) %>
        <%= link_to "Delete", task_path(t),
      method: :delete,
      data: { confirm: "Are you sure?" } %>

      </h2>
    </li>
 <% end %>
</ul>

<p><%= link_to "Create Task", new_task_path %></p>

